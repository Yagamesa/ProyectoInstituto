@*/*sector de carrusel */*@
<style>
    /* Establece un tamaño fijo para el contenedor del carrusel */
    .carousel-container {
        max-width: 1500px; /* Establece el ancho máximo deseado */
        margin: 0 auto; /* Centra el contenedor horizontalmente */
        overflow: hidden; /* Evita que el carrusel se desborde fuera del contenedor */
        border: 2px solid #ccc; /* Establece un borde sólido de 2px con color gris claro */
        border-radius: 10px; /* Agrega bordes redondeados */
        border: 3px solid #b2dafa;
    }
    /* Establece un tamaño fijo para todas las imágenes en modo horizontal */
    .carousel-inner img {
        width: 100%;
        height: auto;
        max-width: 1500px; /* Establece el ancho máximo deseado */
        max-height: 600px; /* Establece la altura máxima deseada */
        border-radius: 10px; /* Agrega bordes redondeados a las imágenes */
        transform-style: preserve-3d; /* Mantiene la perspectiva 3D */
        transition: transform 0.6s ease; /* Agrega una transición suave para el cambio de imagen */
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5); /* Agrega una sombra ligera */
    }
    /* Aplica el efecto 3D al elemento activo del carrusel */
    .carousel-item.active img {
        transform: translateZ(0) scale(1.2); /* Aumenta la escala de la imagen activa */
    }

    .carousel-item {
        transition: transform 0.6s ease;
    }

    .carousel-item-next.carousel-item-left,
    .carousel-item-prev.carousel-item-right {
        transform: translate3d(0, 0, 0);
    }

    .carousel-item-next,
    .carousel-item-prev {
        transform: translate3d(0, 0, 0);
    }

    .carousel-item-prev,
    .active.carousel-item-next {
        transform: translate3d(-33.333%, 0, 0);
    }

    .carousel-item-next,
    .active.carousel-item-prev {
        transform: translate3d(33.333%, 0, 0);
    }
</style>

<div class="carousel-container">
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/css/images/imagen7.jpg" class="d-block w-100" alt="First slide">
            </div>
            <div class="carousel-item">
                <img src="/css/images/imagen6.jpg" class="d-block w-100" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img src="/css/images/imagen5.jpg" class="d-block w-100" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img src="/css/images/imagen4.png" class="d-block w-100" alt="Third slide">
            </div>
        </div>
        <!-- Controles del carrusel -->
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>   
</div>


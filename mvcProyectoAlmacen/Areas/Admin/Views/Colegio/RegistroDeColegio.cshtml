@{
    ViewData["Title"] = "Registro de Colegio";
}

<div class="container mt-4">
    <h2 class="text-primary">Registro de Colegio</h2>
    <form>
        <div class="form-group row">
            <label for="nombreColegio" class="col-sm-2 col-form-label">Nombre del Colegio:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="nombreColegio" placeholder="Ingrese el nombre del colegio">
            </div>
        </div>
        <div class="form-group row">
            <label for="direccion" class="col-sm-2 col-form-label">Dirección:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="direccion" placeholder="Ingrese la dirección del colegio">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Registrar Colegio</button>
            </div>
        </div>
    </form>
</div>

@{
    ViewData["Title"] = "Lista de Colegio";
}
<style>
    .btn-hover:hover {
        background-color: #007bff; /* Cambia este color al color que desees */
        color: #fff; /* Cambia el color del texto si es necesario */
    }
</style>
<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Colegio</h2>
        </div>
        <div class="col-2 text-right">
            <a asp-controller="Colegio" asp-action="Registro" class="btn btn-primary btn-hover">
                <i class="fa-soild fa-plus"></i> Crear Registro
            </a>
        </div>
        <div class="col-2 text-right">
            <a asp-controller="Colegio" asp-action="RegistroDeColegio" class="btn btn-primary btn-hover">
                <i class="fa-soild fa-plus"></i> Insertar Colegio
            </a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblColegio" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>NombreColegio</th>
                <th>Direccion</th>
                <th>Acciones</th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts {
    <script src="~/js/Colegio.js"></script>
}
